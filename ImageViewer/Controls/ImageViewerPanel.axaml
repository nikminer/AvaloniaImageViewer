<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:bk="clr-namespace:BK.Controls;assembly=BK.Controls.ImageViewer"
             x:Class="BK.Controls.ImageViewerPanel">
	<bk:ImageViewer ImageSource="{Binding $parent[UserControl].ImageSource}" 
					MinScale="{Binding  $parent[UserControl].MinScale}" 
					MaxScale="{Binding  $parent[UserControl].MaxScale}"
					Scale="{Binding  $parent[UserControl].Scale}"
					ZIndex="6" />
</UserControl>
